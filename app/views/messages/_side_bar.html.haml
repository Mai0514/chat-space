.chat-side
  .side-bar
    .side-box
      .user-name
        = current_user.name
      .icon-box
        .icon-edit
          =link_to new_group_path do
            = icon('fas', 'edit')
        .icon-settings
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .groups
        = link_to '#' do
          .group
            = group.name
